    <%= f.label :place_cont, '場所' %>
    <%= f.text_field :place_cont, class: 'form-control' %>
    </div>
    <div class="form-group">
    <%= f.label :time_gteq, 'いつからいつまで？' %>
    <div>
    <%= f.datetime_select :time_gteq, prompt: true %></br>
    </div>
    </div>
    <%= f.submit '検索', class: 'btn btn-default' %>
<% end %>

